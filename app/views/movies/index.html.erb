<h1>Movie list</h1>
<div class="container pt-3 pb-1" style="background: rgb(146, 243, 143); border-radius: 10px">
<table class="table table-striped table-bordered table-hover mt-3">
<thead class="thead-dark">
  <tr>
    <th class="text-primary">Movie Id</th>
    <th>Movie Name</th>
    <th>Movie Year</th>
    <th>Open Info</th>
  </tr>
  </thead>
  <% @movies.each do |movie| %>
    <tr>
      <td> <%= movie.id %> </td>
      <td> <%= movie.name %> </td>
      <td> <%= movie.year %> </td>
      <td> <%= link_to('Open', movie_path(movie)) %> </td>
    </tr>
  <% end %>
</table>
</div>


